<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/ic_backgournd1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenue voici votre récaputilatif"
                android:textAlignment="center"
                android:textColor="@color/DleftBlue"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>


            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login: "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lavender_border"
                android:padding="12dp"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/textViewNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom: "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lavender_border"
                android:padding="12dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/textViewPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prénom: "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lavender_border"
                android:padding="12dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/textViewDateNaissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de naissance: "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lavender_border"
                android:padding="12dp"
                android:drawableLeft="@drawable/baseline_calendar_month_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/textViewTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Téléphone: "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lavender_border"
                android:padding="12dp"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lavender_border"
                android:padding="12dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/textViewCentresInteret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Centres d'intérêt: "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/lavender_border"
                android:padding="12dp"
                android:drawableLeft="@drawable/baseline_attractions_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>